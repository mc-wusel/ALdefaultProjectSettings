{
  "compilerOptions": {
    "types": ["node", "vscode", "mocha"],
    "module": "Node16",
    "target": "ES2022",
    "outDir": "./out",
    "lib": ["ES2022"],
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,   
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true       
  },
  "include": [
    "src/**/*.ts"
  ]
}