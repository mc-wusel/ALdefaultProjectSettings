    "commands": [
      {
        "command": "mc.go",
        "title": "Go!",
        "category": "MC"
      },
      {
        "command": "mc.right",
        "title": "Explorer Right",
        "category": "MC"
      },
      {
        "command": "mc.left",
        "title": "Explorer Left",
        "category": "MC"
      },
      {
        "command": "mc.toggleAppSourceCop",
