    "theme": "dark"
  },
  "icon": "Assets/Graphics/JPG/pittbull.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/mc-wusel/ALdefaultProjectSettings"
  },
  "bugs": {
    "url": "https://github.com/mc-wusel/ALdefaultProjectSettings/issues"
  },
  "homepage": "",
